# Backend Environment Example
# Copy to backend/.env and fill in your values

# Core
JWT_SECRET_KEY=local
TOKEN_EXPIRES_MIN=60

# MongoDB
MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/RAG_Chat_Bot_Final_User_Data?retryWrites=true&w=majority
MONGO_DB_NAME=RAG_Chat_Bot_Final_User_Data

# Frontend origin (CORS)
FRONTEND_ORIGIN=http://localhost:3000

# RAG / Pinecone (optional)
PINECONE_API_KEY=
PINECONE_ENV=us-east-1
PINECONE_INDEX=med-chat-index

# Embeddings
EMBEDDING_MODEL=intfloat/e5-base
EMBEDDING_DIM=768

# LLM (Ollama)
LLM_PROVIDER=OLLAMA
LLM_MODEL=phi3:mini
OLLAMA_URL=http://127.0.0.1:11434
PRELOAD_MODELS=true

# LLM generation options (tunable for speed/length)
LLM_NUM_PREDICT=450
LLM_TEMPERATURE=0.25
LLM_TOP_K=30
LLM_TOP_P=0.9
LLM_NUM_CTX=2048
LLM_NUM_THREAD=4
LLM_REPEAT_PENALTY=1.15
